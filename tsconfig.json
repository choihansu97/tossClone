{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false
  },
  "include": [
    "./src/**/*"
  ],
  "typeRoots": [
    "./src",
    "./node_modules/@types"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}